@model IEnumerable<RentCar.Models.Vehicle>


@foreach (var vehicle in Model)
{
    <div class="vehiculo">
        <h3>@vehicle.Marca @vehicle.Modelo</h3>
        <p>Precio por día: $@vehicle.Precio</p>

        <form asp-action="Alquilar" asp-controller="Rental" method="post">
            <input type="hidden" name="VehicleModel" value="@($"{vehicle.Marca} {vehicle.Modelo}")" />
            <input type="hidden" name="PrecioPorDia" value="@vehicle.Precio" />

            <label>Días de alquiler:</label>
            <input type="number" name="Dias" required />

            <label>Dirección de entrega:</label>
            <input type="text" name="Direccion" required />

            <label>Correo electrónico:</label>
            <input type="email" name="Correo" required />

            <button type="submit">Alquilar</button>
        </form>
    </div>
}
@if (TempData["Mensaje"] != null)
{
    <div class="alert alert-success">
        @TempData["Mensaje"]
    </div>
}
