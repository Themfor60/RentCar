@{
    ViewData["Title"] = "Confirmación de Reserva";
}

<div class="container text-center mt-5">
    <div class="alert alert-success" role="alert">
        <h4 class="alert-heading">¡Reserva Exitosa!</h4>
        <p>Tu reserva ha sido registrada con éxito.</p>
        <hr>
        <p class="mb-0">Gracias por elegir nuestros servicios. Te hemos enviado un correo de confirmación con los detalles.</p>
    </div>

    @if (TempData["MensajeExito"] != null)
    {
        <p class="mt-3">@TempData["MensajeExito"]</p>
    }

    <a asp-area="Cliente" asp-controller="Home" asp-action="Vehicles" class="btn btn-primary mt-4">Ver más vehículos</a>
</div>