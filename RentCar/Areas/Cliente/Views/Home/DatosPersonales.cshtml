@model RentCar.Models.ReservaRequest

@{
    ViewData["Title"] = "Datos Personales";
}

<div class="row justify-content-center mt-4">
    <div class="col-md-10 col-lg-8">
        <div class="card shadow">
            <div class="card-header bg-primary text-white">
                <h3 class="mb-0">Formulario de Renta</h3>
            </div>
            <div class="card-body">
                <div class="text-center mb-4">
                    @{
                        
                        var imagenBase64 = ViewData["VehiculoFoto"] != null
                        ? $"data:image/jpeg;base64,{ViewData["VehiculoFoto"]}"
                        : Url.Content("~/images/vehiculos/default.jpg");
                    }

                    <img src="@imagenBase64" alt="Imagen del Vehículo" class="img-fluid rounded shadow" style="max-height: 300px;" />
                    <h4 class="mt-3">@ViewData["VehiculoMarca"] @ViewData["VehiculoModelo"]</h4>
                </div>

                <ul class="list-group mb-4">
                    
                    <li class="list-group-item">Transmisión: <strong>@ViewData["Transmision"]</strong></li>
                    <li class="list-group-item">Capacidad: <strong>@ViewData["CapacidadPersonas"]</strong> personas</li>
                    <li class="list-group-item">Maletero: <strong>@ViewData["CapacidadMaletero"]</strong> litros</li>
                </ul>

                
                <p class="text-info">ID del Vehículo seleccionado: <strong>@Model.VehiculoId</strong></p>

                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <form asp-action="DatosPersonales" asp-controller="Home" method="post" class="needs-validation" novalidate>
                   
                    <input type="hidden" asp-for="VehiculoId" />

                    <div class="mb-3">
                        <label asp-for="Nombre" class="form-label"></label>
                        <input asp-for="Nombre" class="form-control" />
                        <span asp-validation-for="Nombre" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Apellido" class="form-label"></label>
                        <input asp-for="Apellido" class="form-control" />
                        <span asp-validation-for="Apellido" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="EmailCliente" class="form-label"></label>
                        <input asp-for="EmailCliente" class="form-control" type="email" /> 
                        <span asp-validation-for="EmailCliente" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Telefono" class="form-label"></label>
                        <input asp-for="Telefono" class="form-control" type="tel" /> 
                        <span asp-validation-for="Telefono" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Cedula" class="form-label"></label>
                        <input asp-for="Cedula" class="form-control" />
                        <span asp-validation-for="Cedula" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="CiudadCodigo" class="form-label"></label>
                        <input asp-for="CiudadCodigo" class="form-control" />
                        <span asp-validation-for="CiudadCodigo" class="text-danger"></span>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="FechaRecogida" class="form-label"></label>
                            <input asp-for="FechaRecogida" type="date" class="form-control" />
                            <span asp-validation-for="FechaRecogida" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="HoraRecogida" class="form-label"></label>
                            <input asp-for="HoraRecogida" type="time" class="form-control" />
                            <span asp-validation-for="HoraRecogida" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="FechaEntrega" class="form-label"></label>
                            <input asp-for="FechaEntrega" type="date" class="form-control" />
                            <span asp-validation-for="FechaEntrega" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="HoraEntrega" class="form-label"></label>
                            <input asp-for="HoraEntrega" type="time" class="form-control" />
                            <span asp-validation-for="HoraEntrega" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="FechaNacimiento" class="form-label"></label>
                        <input asp-for="FechaNacimiento" type="date" class="form-control" />
                        <span asp-validation-for="FechaNacimiento" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Tripulantes" class="form-label"></label>
                        <input asp-for="Tripulantes" type="number" class="form-control" />
                        <span asp-validation-for="Tripulantes" class="text-danger"></span>
                    </div>

                    <button type="submit" class="btn btn-success w-100 mt-3">Reservar</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}