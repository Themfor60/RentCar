@model IEnumerable<RentCar.Models.ReservaRequest>
@using Microsoft.AspNetCore.Identity
@inject UserManager<IdentityUser> UserManager
@inject SignInManager<IdentityUser> SignInManager

@{
    ViewData["Title"] = "Gestión de Reservas y Clientes"; 
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />

<div class="container-fluid">
    <div class="row min-vh-100">
       

        <nav class="col-md-2 bg-dark text-white p-3 d-flex flex-column gap-3">
            <h4 class="text-center text-white mb-4"><i class="bi bi-speedometer2"></i> Panel Admin</h4> 

            <a asp-area="Admin" asp-controller="Dashboard" asp-action="Index" class="text-white text-decoration-none py-2 px-3 rounded hover-primary">
                <i class="bi bi-car-front-fill me-2"></i> Vehículos
            </a>
            <a asp-area="Admin" asp-controller="Cliente" asp-action="Clientes" class="text-white text-decoration-none py-2 px-3 rounded hover-primary active bg-secondary">
              
                <i class="bi bi-people-fill me-2"></i> Clientes
            </a>
            <a asp-area="Admin" asp-controller="Rentas" asp-action="Index" class="text-white text-decoration-none py-2 px-3 rounded hover-primary">
                
                <i class="bi bi-calendar-check-fill me-2"></i> Rentas
            </a>
            <a asp-area="Admin" asp-controller="Finanzas" asp-action="Index" class="text-white text-decoration-none py-2 px-3 rounded hover-primary">
                
                <i class="bi bi-cash-stack me-2"></i> Finanzas
            </a>

            @if (User.IsInRole("SuperUsuario"))
            {
                <a asp-action="CrearUsuario" asp-controller="Dashboard" class="btn btn-outline-primary">
                    <i class="bi bi-person-plus"></i> Crear Usuario
                </a>
            }
            
            <style>
                .hover-primary:hover {
                    background-color: #007bff; 
                    color: white !important;
                }
            </style>
        </nav>

        <main class="col-md-10 p-4">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2><i class="bi bi-people-fill me-2"></i> Gestión de Clientes y Reservas</h2>
             
            </div>

            <div class="table-responsive">
                <table class="table table-hover table-bordered align-middle shadow">
                    <thead class="table-dark text-center">
                        <tr>
                            <th>ID Reserva</th>
                            <th>Nombre Completo</th>
                            <th>Email</th>
                            <th>Teléfono</th>
                            <th>Cédula</th>                            
                            <th>Vehículo Reservado</th>
                            <th>Fecha/Hora Recogida</th> 
                            <th>Fecha/Hora Entrega</th> 
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody class="text-center">
                        @if (Model != null && Model.Any())
                        {
                            @foreach (var reserva in Model) 
                            {
                                <tr>
                                    <td>@reserva.IdReserva</td>
                                    <td>@reserva.Nombre @reserva.Apellido</td> 
                                    <td>@reserva.EmailCliente</td>
                                    <td>@reserva.Telefono</td>
                                    <td>@reserva.Cedula</td>
                                    <td>
                                        @if (reserva.Vehiculo != null)
                                        {
                                            @reserva.Vehiculo.Marca @: @reserva.Vehiculo.Modelo 
                                        }
                                        else
                                        {
                                            <span>N/A</span> 
                                        }
                                    </td>
                                    <td>@reserva.FechaHoraRecogidaCompleta.ToString("dd/MM/yyyy HH:mm")</td> 
                                    <td>@reserva.FechaHoraEntregaCompleta.ToString("dd/MM/yyyy HH:mm")</td> 
                                    <td>

                                        <a asp-action="DetalleCliente" asp-controller="Cliente" asp-area="Admin" asp-route-id="@reserva.IdReserva" class="btn btn-sm btn-info me-1" title="Ver Detalles">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                        @if (SignInManager.IsSignedIn(User) && User.IsInRole("SuperUsuario"))
                                        {
                                            <a asp-action="EditarCliente" asp-controller="Cliente" asp-area="Admin" asp-route-id="@reserva.IdReserva" class="btn btn-sm btn-warning me-1" title="Editar Reserva">
                                                <i class="bi bi-pencil-square"></i>
                                            </a>
                                            <a asp-action="BorrarCliente" asp-controller="Cliente" asp-area="Admin" asp-route-id="@reserva.IdReserva" class="btn btn-sm btn-danger" title="Eliminar Reserva">
                                                <i class="bi bi-trash-fill"></i>
                                            </a>
                                        }
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="9" class="text-center">No hay reservas registradas.</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </main>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>