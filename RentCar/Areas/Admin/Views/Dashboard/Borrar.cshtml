@model RentCar.Models.Vehiculo

@{
    ViewData["Title"] = "Borrar Vehículo";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />

<div class="container mt-5">
    <div class="card shadow">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0"><i class="bi bi-pencil-square"></i> Borrar Vehículo</h4>
        </div>
        <div class="card-body">
            <form asp-action="Borrar" method="post">
                <input type="hidden" asp-for="Id" />

                <div class="mb-3">
                    <label asp-for="Marca" class="form-label">Marca</label>
                    <input asp-for="Marca" readonly class="form-control" />
                </div>

                <div class="mb-3">
                    <label asp-for="Modelo" class="form-label">Modelo</label>
                    <input asp-for="Modelo" readonly class="form-control" />
                </div>
                <div class="mb-3">
                    <label asp-for="Transmision" class="form-label">Transmisión</label>
                    <input asp-for="Transmision" readonly class="form-control" />
                </div>


                <div class="mb-3">
                    <label asp-for="CapacidadMaletero" class="form-label">Capacidad de Maletero</label>
                    <input asp-for="CapacidadMaletero" readonly type="number" class="form-control" />
                </div>

                <div class="mb-3">
                    <label asp-for="CapacidadPersonas" class="form-label">Capacidad de Personas</label>
                    <input asp-for="CapacidadPersonas" readonly class="form-control" />
                </div>

                <div class="mb-3">
                    <label asp-for="Precio" class="form-label">Precio</label>
                    <input asp-for="Precio" type="number" readonly step="0.01" class="form-control" />
                </div>

                <div class="d-flex justify-content-between">
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-arrow-left"></i> Volver
                    </a>
                    <button type="button" class="btn btn-danger" onclick="confirmarBorradoVehiculo(this)">
                        <i class="bi bi-trash-fill"></i>
                        Borrar
                    </button>


                </div>
            </form>
        </div>
    </div>
</div>
