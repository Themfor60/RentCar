@model IEnumerable<RentCar.Models.Vehiculo>

@{
    ViewData["Title"] = "Dashboard de Gestión de Vehículos";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />

<div class="container-fluid">
    <div class="row vh-100">


        <nav class="col-md-2 bg-dark text-white p-3 d-flex flex-column gap-3">
            <h4 class="text-center text-white mb-4"><i class="bi bi-speedometer2"></i> Panel Admin</h4>

            <a asp-area="Admin" asp-controller="Dashboard" asp-action="Index" class="text-white text-decoration-none py-2 px-3 rounded hover-primary">
                <i class="bi bi-car-front-fill me-2"></i> Vehículos
            </a>
            <a asp-area="Admin" asp-controller="Cliente" asp-action="Clientes" class="text-white text-decoration-none py-2 px-3 rounded hover-primary active bg-secondary">

                <i class="bi bi-people-fill me-2"></i> Clientes
            </a>
            <a asp-area="Admin" asp-controller="Rentas" asp-action="Index" class="text-white text-decoration-none py-2 px-3 rounded hover-primary">

                <i class="bi bi-calendar-check-fill me-2"></i> Rentas
            </a>
            <a asp-area="Admin" asp-controller="Finanzas" asp-action="Index" class="text-white text-decoration-none py-2 px-3 rounded hover-primary">

                <i class="bi bi-cash-stack me-2"></i> Finanzas
            </a>

            <style>
                .hover-primary:hover {
                    background-color: #007bff;
                    color: white !important;
                }
            </style>
        </nav>

        
        <main class="col-md-10 p-4">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2><i class="bi bi-car-front-fill"></i> Gestión de Vehículos</h2>
                <a asp-area="Admin" asp-controller="Vehiculos" asp-action="Create" class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i> Agregar Vehículo
                </a>
            </div>

            <div class="table-responsive">
                <table class="table table-hover table-bordered align-middle shadow">
                    <thead class="table-dark text-center">
                        <tr>
                            <th>ID</th>
                            <th>Marca</th>
                            <th>Modelo</th>
                            <th>Trasmision</th>
                            <th>Cap. Persona</th>
                            <th>Cap. Maleta</th>
                            <th>Precio</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody class="text-center">
                        @foreach (var vehiculo in Model)
                        {
                            <tr>
                                <td>@vehiculo.Id</td>
                                <td>@vehiculo.Marca</td>
                                <td>@vehiculo.Modelo</td>
                                <td>@vehiculo.Transmision</td>
                                <td>@vehiculo.CapacidadPersonas</td>
                                <td>@vehiculo.CapacidadMaletero</td>    
                                <td>@vehiculo.Precio.ToString("C")</td>
                                <td>
                                    <a asp-action="Editar" asp-controller="Dashboard" asp-area="Admin" asp-route-id="@vehiculo.Id" class="btn btn-sm btn-warning me-1" title="Editar">
                                        <i class="bi bi-pencil-square"></i>
                                    </a>

                                     <a asp-action="Borrar" asp-controller="Dashboard" asp-area="Admin" asp-route-id="@vehiculo.Id" class="btn btn-sm btn-danger me-1" title="Borrar">
                                         <i class="bi bi-trash-fill"></i>
                                    </a>
                                    <button class="btn btn-sm btn-success d-none" title="Guardar">
                                        <i class="bi bi-save-fill"></i>
                                    </button>
                                </td>
                            </tr>
                        }
                       
                    </tbody>
                </table>
            </div>
        </main>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
