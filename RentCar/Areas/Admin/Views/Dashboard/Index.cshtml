@model IEnumerable<RentCar.Models.Vehiculo>

@{
    ViewData["Title"] = "Dashboard de Gestión de Vehículos";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />

<div class="container-fluid">
    <div class="row vh-100">

        
        <nav class="col-md-2 bg-dark text-white p-3 d-flex flex-column gap-3">
            <h4 class="text-center text-white"><i class="bi bi-speedometer2"></i> Menú</h4>

            <a asp-area="Cliente" asp-controller="Home" asp-action="Vehicles" class="text-white">
                <i class="bi bi-car-front-fill"></i> Vehículos
            </a>
            <a href="#" class="text-white">
                <i class="bi bi-people-fill"></i> Clientes
            </a>
            <a href="#" class="text-white">
                <i class="bi bi-calendar-check-fill"></i> Rentas
            </a>
            <a href="#" class="text-white">
                <i class="bi bi-cash-stack"></i> Finanzas
            </a>
        </nav>

        
        <main class="col-md-10 p-4">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2><i class="bi bi-car-front-fill"></i> Gestión de Vehículos</h2>
                <a asp-area="Admin" asp-controller="Vehiculos" asp-action="Create" class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i> Agregar Vehículo
                </a>
            </div>

            <div class="table-responsive">
                <table class="table table-hover table-bordered align-middle shadow">
                    <thead class="table-dark text-center">
                        <tr>
                            <th>ID</th>
                            <th>Marca</th>
                            <th>Modelo</th>
                            <th>Año</th>
                            <th>Placa</th>
   
                            <th>Precio</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody class="text-center">
                        @foreach (var vehiculo in Model)
                        {
                            <tr>
                                <td>@vehiculo.Id</td>
                                <td>@vehiculo.Marca</td>
                                <td>@vehiculo.Modelo</td>
                                <td>@vehiculo.CapacidadMaletero</td>
                                <td>@vehiculo.CapacidadPersonas</td>
                               
                                <td>@vehiculo.Precio.ToString("C")</td>
                                <td>
                                    <button class="btn btn-sm btn-warning me-1" title="Editar">
                                        <i class="bi bi-pencil-square"></i>
                                    </button>
                                    <button class="btn btn-sm btn-danger me-1" title="Eliminar">
                                        <i class="bi bi-trash-fill"></i>
                                    </button>
                                    <button class="btn btn-sm btn-success d-none" title="Guardar">
                                        <i class="bi bi-save-fill"></i>
                                    </button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </main>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
